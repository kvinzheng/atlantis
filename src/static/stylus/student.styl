.StudentList {

    &-id {
        font-wieght: bold;
        width: 70px;
    }
    
    &-table {
        margin: 0 auto;
        border-collapse: collapse;
    }

    &-race {
        width: 50px;
    }
    &-gender {
      width: 120px;
    }
    &-name {
        width: 113px;
    }
    &-introduction {
      width: 255px;
    }

    &-phone-numbers {
      width: 150px;
    }
    
    &-university {
        width: 155px;
    }

    &-gpa {
        width: 140px;
    }

    &-program-description-content {
        display: flex;
    }

    tr:nth-child(2n) {
        background-color: #f9f9f9;
    }

    td, th {
        border: 1px solid #ddd;
        padding: 8px;
    }
    th {
      color: rgba(0,0,0,.44);
    }

    td:first-child {
        color: rgba(0,0,0,.44);
    }
}
