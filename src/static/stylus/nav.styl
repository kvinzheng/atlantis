.GlobalHeaderNav {
  .ui.secondary.menu {
    background-color: #283e4a;
  }
  &-icon {
    min-width: 80px;
    display: inline-block;
    margin: auto;
    width: 100%;
    padding: 0px;
  }
  &-icon-pic {
    white-space: nowrap;
    width: 100%;
  }
  &-items-list-item {
    float: left;
    margin-bottom: 0;
    min-width: 85px;

    padding: 25px 35px;
  }
  &-items-list {
    padding-top: 4px;
    width: 33%;
    margin-left: 30px;
  }
  &-app-header {
    white-space: nowrap;
    font-size: 18px;
    font-weight: 700;
    display: inline-block;
    color: #fff;
  }

  .ui.secondary.pointing.menu .item {
    width: 20%;
    padding: 1.857143em 1.14285714em;
    font-size: 16px;
    color: white;
  }
  .ui.secondary.pointing.menu .active.item,
  .ui.secondary.pointing.menu .active.item:hover,
  .ui.secondary.pointing.menu .active.item,
  .ui.secondary.pointing.menu .item:hover,
  .ui.secondary.pointing.menu .active.item:hover {
    color: white;
  }

  .ui.secondary.pointing.menu .active.item,.ui.secondary.pointing.menu .active.item:hover {
    border-bottom-color: #fff;
  }
}
